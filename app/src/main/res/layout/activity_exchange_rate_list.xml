<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExchangeRateListActivity">

    <ImageView
        android:id="@+id/euro"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/euro" />

    <ImageView
        android:id="@+id/dollar"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/euro"
        app:srcCompat="@drawable/dollar" />

    <ImageView
        android:id="@+id/pound"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dollar"
        app:srcCompat="@drawable/pound" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintLeft_toRightOf="@+id/euro"
        app:layout_constraintTop_toTopOf="@+id/euro"
        android:text="@string/product_description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintLeft_toRightOf="@+id/dollar"
        app:layout_constraintTop_toTopOf="@+id/dollar"
        android:text="@string/product_description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintLeft_toRightOf="@+id/pound"
        app:layout_constraintTop_toTopOf="@+id/pound"
        android:text="@string/product_description"/>

</androidx.constraintlayout.widget.ConstraintLayout>